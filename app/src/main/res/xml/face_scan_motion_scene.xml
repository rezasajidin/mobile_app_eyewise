<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="1500"
        motion:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@id/scannerLine"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentY="0.8"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/scannerLine"
            android:layout_width="250dp"
            android:layout_height="2dp"
            motion:layout_constraintStart_toStartOf="@id/scannerOverlay"
            motion:layout_constraintEnd_toEndOf="@id/scannerOverlay"
            motion:layout_constraintTop_toTopOf="@id/scannerOverlay" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/scannerLine"
            android:layout_width="250dp"
            android:layout_height="2dp"
            motion:layout_constraintStart_toStartOf="@id/scannerOverlay"
            motion:layout_constraintEnd_toEndOf="@id/scannerOverlay"
            motion:layout_constraintBottom_toBottomOf="@id/scannerOverlay" />
    </ConstraintSet>

</MotionScene>